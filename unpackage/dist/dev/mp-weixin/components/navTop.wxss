.nav {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 100%;
  height: 44px;
  line-height: 44px;
  -webkit-justify-content: space-around;
          justify-content: space-around;
}
.nav .nav_item {
  font-size: 15px;
  color: #333333;
  letter-spacing: 3rpx;
}
.nav .nav_item_selected {
  color: #E9200F;
  font-size: 18px;
  font-family: 'PingFangSC-Medium';
  font-weight: 600;
  letter-spacing: 3rpx;
  border-bottom: 4rpx solid #E9200F;
  border-radius: 2rpx;
}

