  border-radius: 10rpx;
  box-shadow: 0 4rpx 8rpx #d0d3d8;
  position: relative;
}
page .voiceCategoryPage .right .right-item .img .logo {
  width: 30rpx;
  height: 22rpx;
  position: absolute;
  left: 10rpx;
  bottom: 10rpx;
}
page .voiceCategoryPage .right .right-item .details {
  height: 200rpx;
  width: 345rpx;
