page {
  height: 100%;
}
page .voiceCategoryPage {
  height: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
page .voiceCategoryPage .left {
  height: 100%;
  width: 168rpx;
  background-color: #FAFAFA;
}
page .voiceCategoryPage .left ::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
page .voiceCategoryPage .left .left-scroll-Y .left-item {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-family: 'PingFang-SC-Medium';
  font-weight: normal;
  color: #333333;
  font-size: 28rpx;
  letter-spacing: 3rpx;
}
page .voiceCategoryPage .left .left-scroll-Y .selected {
  font-family: 'PingFang-SC-Bold';
  font-weight: bold;
  color: #E9200F;
  font-size: 28rpx;
  border-left: 4rpx solid #E9200F;
  box-sizing: border-box;
}
page .voiceCategoryPage .right {
  display: -webkit-box;
