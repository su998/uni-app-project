.voiceDetailsPage {
  overflow-x: hidden;
}
.voiceDetailsPage .header {
  width: 100%;
  padding: 30rpx 30rpx 40rpx 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.voiceDetailsPage .header .img {
  width: 240rpx;
  height: 320rpx;
  background-color: #F0AD4E;
  border-radius: 10rpx;
  box-shadow: -10rpx 10rpx 30rpx #d0d2d7;
  position: relative;
}
.voiceDetailsPage .header .img image {
  width: 240rpx;
}
.voiceDetailsPage .header .img .logo {
  width: 48rpx;
  height: 35rpx;
  position: absolute;
  left: 10rpx;
  bottom: 22rpx;
}
.voiceDetailsPage .header .detail {
  height: 320rpx;
  margin-left: 60rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.voiceDetailsPage .header .detail .title {
  color: #333333;
  font-size: 32rpx;
  margin-top: 10rpx;
  margin-bottom: 14rpx;
}
.voiceDetailsPage .header .detail .author {
  color: #999999;
  font-size: 24rpx;
  letter-spacing: 3rpx;
  line-height: 30rpx;
}
.voiceDetailsPage .header .detail .content {
  margin-top: 24rpx;
  margin-bottom: 19rpx;
  line-height: 36rpx;
}
.voiceDetailsPage .header .detail .content text {
  color: #666666;
  font-size: 24rpx;
  letter-spacing: 3rpx;
}
.voiceDetailsPage .header .detail .nowRead {
  display: inline-block;
  font-size: 24rpx;
  color: #FFFFFF;
  width: 150rpx;
  height: 52rpx;
  background: -webkit-gradient(linear, 0 0, 0 100%, from(#EB6056), to(#E82515));
  border-radius: 150rpx;
  text-align: center;
  line-height: 52rpx;
}
.voiceDetailsPage .blank {
  width: 100%;
  height: 10rpx;
  background-color: #F7F7F7;
}
.voiceDetailsPage .directory_wrapper .section {
  width: 691rpx;
  margin: 29rpx 29rpx 14rpx 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.voiceDetailsPage .directory_wrapper .section .total {
  color: #333333;
  font-size: 32rpx;
  line-height: 32rpx;
  letter-spacing: 3rpx;
}
.voiceDetailsPage .directory_wrapper .section .choice {
  color: #333333;
  font-size: 32rpx;
  line-height: 32rpx;
  letter-spacing: 3rpx;
}
.voiceDetailsPage .directory_wrapper .section .choice image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.voiceDetailsPage .directory_wrapper .directory .item {
  width: 690rpx;
  height: 72rpx;
  line-height: 72rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  padding-left: 10rpx;
  color: #333333;
  font-size: 26rpx;
  border-bottom: 1rpx solid #E6E6E6;
}
.voiceDetailsPage .directory_wrapper .directory .item .title {
  display: inline-block;
  margin-left: 30rpx;
}

